{
  "manifest_version": 3,
  "name": "SwiftCopy",
  "version": "0.3.0",
  "description": "Because copying text should be faster than your fastest friend in a running race! üèÉ‚Äç‚ôÇÔ∏èüí®",
  "permissions": [
    "clipboardWrite", 
    "storage",  
    "notifications",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon_enabled_16.png",
      "48": "icons/icon_enabled_48.png",
      "128": "icons/icon_enabled_128.png",
      "256": "icons/icon_enabled_256.png"
    },
    "default_title": "SwiftCopy"
  },
  "icons": {
    "16": "icons/icon_enabled_16.png",
    "48": "icons/icon_enabled_48.png",
    "128": "icons/icon_enabled_128.png",
    "256": "icons/icon_enabled_256.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "toggle-swiftcopy": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Toggle SwiftCopy on/off"
    }
  }
}
